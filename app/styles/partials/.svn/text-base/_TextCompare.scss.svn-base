/*		Mobile Layout */
@media only screen and (max-width: 737px) {
	#Main{
		.text_compare{
			.Col.Answer{margin-top:15px; min-height:10px; float:none; width:100%;}
			.Col.UserAnswer{min-height:10px; float:none; width:100%;}
			textarea{min-height:150px;}
			.Col.Answer{
				.ScrollArea{height:150px;}
			}
		}
	}
}

