
@-webkit-keyframes HotPulse {
	0%   {opacity: 0; }
	50%    {opacity: 1; }
	100% {opacity: 0; }
}
@-moz-keyframes HotPulse {
	0%   {opacity: 0; }
	50%    {opacity: 1; }
	100% {opacity: 0; }
}
@-ms-keyframes HotPulse {
	0%   {opacity: 0; }
	50%    {opacity: 1; }
	100% {opacity: 0; }
}
@-o-keyframes HotPulse {
	0%   {opacity: 0; }
	50%    {opacity: 1; }
	100% {opacity: 0; }
}
@keyframes HotPulse {
	0%   {opacity: 0; }
	50%    {opacity: 1; }
	100% {opacity: 0; }
}


div.FullScreenOverlay{position:fixed; top:0; bottom:0; right:0; left:0; z-index:4000;
		background:#000;
	a.Close{padding:0 15px; position:absolute; right:18px; top:18px; height:30px; z-index:4200; text-decoration:none; line-height:30px; font-weight:bold; font-size:13px; @include border-radius(4px); font-style:normal; text-transform:uppercase;
			color:#C7D3E3;
			background: #004cbc;
			background: -moz-linear-gradient(top,  #004cbc 0%, #0149b5 19%, #0044a9 35%, #003688 62%, #002b68 81%, #002359 92%, #012152 100%);
			background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#004cbc), color-stop(19%,#0149b5), color-stop(35%,#0044a9), color-stop(62%,#003688), color-stop(81%,#002b68), color-stop(92%,#002359), color-stop(100%,#012152));
			background: -webkit-linear-gradient(top,  #004cbc 0%,#0149b5 19%,#0044a9 35%,#003688 62%,#002b68 81%,#002359 92%,#012152 100%);
			background: -o-linear-gradient(top,  #004cbc 0%,#0149b5 19%,#0044a9 35%,#003688 62%,#002b68 81%,#002359 92%,#012152 100%);
			background: -ms-linear-gradient(top,  #004cbc 0%,#0149b5 19%,#0044a9 35%,#003688 62%,#002b68 81%,#002359 92%,#012152 100%);
			background: linear-gradient(top,  #004cbc 0%,#0149b5 19%,#0044a9 35%,#003688 62%,#002b68 81%,#002359 92%,#012152 100%);
		&:focus, &:active, &:hover{text-decoration:underline;
				color:#FFF;
		}
	}
	.message{padding:0; position:relative; top:0; right:0; left:0; z-index:4100;
				background:#000;
		p{margin:20px auto; padding:0 56px; font-size:16px; line-height:24px; width:55%; text-align:left; font-style:italic; position:relative; min-height:36px;
			display:-moz-inline-stack; display:inline-block; zoom:1; *display:inline;
				color:#FFF;
			&:after{content:''; width:36px; height:36px; position:absolute; top:50%; margin-top:-20px; left:0;
					background:url(../img/FullScreenFeedBack.png) no-repeat left top;
			}
		}
		&.Instruction{
			p{
				&:after{
						background:url(../img/FullScreenFeedBack.png) no-repeat left top;
				}
			}
		}
		&.Correct{
			p{
				&:after{
						background:url(../img/FullScreenFeedBack.png) no-repeat left -36px;
				}
			}
		}
		&.Incorrect{
			p{
				&:after{
						background:url(../img/FullScreenFeedBack.png) no-repeat left -72px;
				}
			}
		}
	}
	p.simEnd{margin:0; padding:64px 36px 36px 36px; position:absolute; height:200px; font-weight:bold; top:50%; margin-top:-200px; width:400px; left:50%; margin-left:-200px; font-size:16px; line-height:32px; font-style:italic; @include border-radius(15px);
			color:#333333; border:6px solid #0065BD;
			background: #e8e8e8;
			background: -moz-linear-gradient(top,  #e8e8e8 0%, #f8f8f8 20%, #f8f8f8 80%, #e8e8e8 100%);
			background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#e8e8e8), color-stop(20%,#f8f8f8), color-stop(80%,#f8f8f8), color-stop(100%,#e8e8e8));
			background: -webkit-linear-gradient(top,  #e8e8e8 0%,#f8f8f8 20%,#f8f8f8 80%,#e8e8e8 100%);
			background: -o-linear-gradient(top,  #e8e8e8 0%,#f8f8f8 20%,#f8f8f8 80%,#e8e8e8 100%);
			background: -ms-linear-gradient(top,  #e8e8e8 0%,#f8f8f8 20%,#f8f8f8 80%,#e8e8e8 100%);
			background: linear-gradient(top,  #e8e8e8 0%,#f8f8f8 20%,#f8f8f8 80%,#e8e8e8 100%);

		&:after{content:''; position:absolute; top:-20px; bottom:-20px; left:-20px; right:-20px; @include border-radius(17px);
				border:1px solid #666666;
		}
		&:before{content:''; position:absolute; top:30px; bottom:30px; left:36px; right:36px; @include border-radius(10px);
				border-top:2px solid #D7D7D7; border-bottom:1px solid #CCCCCC;
		}
	}
	
	div.Score{padding:14px 10px 14px 14px; position:absolute; right:0; bottom:58px; text-align:left; width:180px;
			background:#000; background:rgba(0, 0, 0, 0.8);
		h2{margin:0 0 7px 0; font-size:10px; line-height:10px; text-transform:uppercase; font-style:italic; font-weight:bold;
				color:#81c14e;
		}
		p{
			span.percent{margin:0 0 6px 0; padding:3px 6px 3px 3px; font-size:36px; line-height:36px; font-style:italic; font-weight:bold;
				display:-moz-inline-stack; display:inline-block; zoom:1; *display:inline;
					color:#FFF; border-bottom:1px solid #4d4d4d; border-top:1px solid #4d4d4d; background:#1a1a1a;
			}
			span.note{display:block; text-transform:uppercase; font-size:10px; line-height:15px;
				color:#bebebe; 
			}
		}
	}
	
	
	
	div.FullProg{padding:17px 0; position:absolute; bottom:0; right:0; left:0;
			border-top:2px solid #606060; background:#000;
		*{-webkit-transition:all 0.2s ease; -moz-transition:all 0.2s ease; -ms-transition:all 0.2s ease; -o-transition:all 0.2s ease;}
		.ProgTrack{margin:0 auto; width:70%; height:22px; position:relative; @include border-radius(50px); overflow:hidden;
				background: #323232;
				background: -moz-linear-gradient(top,  #323232 0%, #2a2a2a 35%, #171717 100%);
				background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#323232), color-stop(35%,#2a2a2a), color-stop(100%,#171717));
				background: -webkit-linear-gradient(top,  #323232 0%,#2a2a2a 35%,#171717 100%);
				background: -o-linear-gradient(top,  #323232 0%,#2a2a2a 35%,#171717 100%);
				background: -ms-linear-gradient(top,  #323232 0%,#2a2a2a 35%,#171717 100%);
				background: linear-gradient(top,  #323232 0%,#2a2a2a 35%,#171717 100%);
			.ProgBar{top:0; bottom:0; left:0; position:absolute; @include border-radius(50px 0 0 50px);
					background: #0081d7;
					background: -moz-linear-gradient(top,  #0081d7 0%, #006fc8 15%, #014397 60%, #012b67 100%);
					background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#0081d7), color-stop(15%,#006fc8), color-stop(60%,#014397), color-stop(100%,#012b67));
					background: -webkit-linear-gradient(top,  #0081d7 0%,#006fc8 15%,#014397 60%,#012b67 100%);
					background: -o-linear-gradient(top,  #0081d7 0%,#006fc8 15%,#014397 60%,#012b67 100%);
					background: -ms-linear-gradient(top,  #0081d7 0%,#006fc8 15%,#014397 60%,#012b67 100%);
					background: linear-gradient(top,  #0081d7 0%,#006fc8 15%,#014397 60%,#012b67 100%);
				&.Complete{@include border-radius(50px);}
			}
		}
	}
	
	
	
	.sequenceHotspotHolder{position:relative;}
	.sequenceHotspot{
		img{}
		ul{position:absolute; top:0; bottom:0; left:0; right:0;}
		li{position:absolute;
			a{position:absolute; top:0; bottom:0; left:0; right:0; @include TextIndent(); border:1px solid transparent;
				-webkit-animation: HotPulse 2s infinite; -moz-animation: HotPulse 2s infinite; -ms-animation: HotPulse 2s infinite; -o-animation: HotPulse 2s infinite; animation: HotPulse 2s infinite;
				-webkit-transition: border 0.2s ease; -moz-transition:border 0.2s ease; -ms-transition:border 0.2s ease; -o-transition:border 0.2s ease;
				&:after{content:"hello"; position:absolute; top:50%; margin-top:-7px; left:-26px; width:17px; height:14px;
						background-color:red; background-color:rgba(255, 0, 0, 0.8);
				}
				&:before{content:""; position:absolute; top:50%; margin-top:-7px; left:-9px; 
						border-width:7px; border-style:solid; border-color:transparent transparent transparent red; border-color:transparent transparent transparent rgba(255, 0, 0, 0.8);
				}
				&:focus, &:active, &:hover{
					border:1px solid red;
				}
			}
		}
	}
}


